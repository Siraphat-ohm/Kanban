// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  DONE
  NOT_STARTED
}

model homework {
  id String @id
  subject String
  description String
  dueDate DateTime
  isExam Boolean
  status Status @default(NOT_STARTED)
  createAt DateTime @default(now())
}